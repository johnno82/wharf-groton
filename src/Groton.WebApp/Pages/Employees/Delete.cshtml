@page
@model Groton.WebApp.Pages.Employees.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form id="employeeForm" method="post">
            <h2>Are you sure you want to delete this?</h2>
            <a asp-page="/Index">Back to full List</a>
            <hr />
            <div class="container">
                <div class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(m => m.Employee.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(m => m.Employee.Name)
                    </dd>
                </div>
                <div class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(m => m.Employee.JobTitle)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(m => m.Employee.JobTitle)
                    </dd>
                </div>
            </div>
            <input type="hidden" asp-for="Employee.EmployeeID" />
            <button id="delete" type="submit" class="w-100 btn btn-lg btn-danger">Delete</button>
        </form>
    </div>
</div>
